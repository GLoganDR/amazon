extends ../shared/template
block content
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.displayName || user.email
  .row
    .col-xs-2
      a.thumbnail(href='#')
        img(src=user.photo)
    .col-xs-10
  .row
    .col-xs-4
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Name
            th Email
            th Age
        body
          tr
            td= user.name
            td= user.email
            td= user.age
    .col-xs-8

block scripts
